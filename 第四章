//明解Java 4-2
import java.util.Scanner;
import java.util.Random;
class CaiMi{
	public static void main(String[] args){
		Scanner stdIn = new Scanner(System.in);
		Random rand = new Random();

		int x = rand.nextInt(90) + 10;
		
		System.out.println("猜数字游戏开始！");
		System.out.println("请猜一个10 ~ 99的数！");

		int y;
		do{
			System.out.print("是多少呢：");
			y = stdIn.nextInt();
			
			if(y < x)
				System.out.println("比这个数字大");
			else if(y > x)
				System.out.println("比这个数字小");
		}while(y != x);
		System.out.println("回答正确！");
	}
}

//明解Java 4-3
import java.util.Scanner;
class PaiXu{
	public static void main(String[] args){
		Scanner stdIn = new Scanner(System.in);

		System.out.print("整数A：");
		int A = stdIn.nextInt();
		System.out.print("整数B：");
		int B = stdIn.nextInt();

		if(A > B){
			int t = A;
			A = B;
			B = t;
		}

		int z = A;
		do{		
			System.out.print(z + " ");
			z++;
		}while(z <= B);
	}
}

//明解Java 4-7
import java.util.Scanner;
class FuHao{
	public static void main(String[] args){
		Scanner stdIn = new Scanner(System.in);

		System.out.print("要显示多少个呢：");
		int a = stdIn.nextInt();
		int x = 0;

		if(a % 2 == 0){
			int b = a / 2;
			do{
				System.out.print("*+");
				x++;
			}while(x != b);
		}else{
			int b = (a - 1) / 2;
			do{
				System.out.print("*+");
				x++;
			}while(x != b);
			System.out.print('*');
		}
	}
}

//明解Java 4-8
import java.util.Scanner;
class WeiShu{
	public static void main(String[] args){
		Scanner stdIn = new Scanner(System.in);

		System.out.print("整数值：");
		int a = stdIn.nextInt();
		int sum = 0;
		do{
			a /= 10;
			sum++;
		}while(a != 0);
		System.out.println("该值为" + sum + "位。");
	}
}

//明解Java 4-9
import java.util.Scanner;
class Ji{
	public static void main(String[] args){
		Scanner stdIn = new Scanner(System.in);

		System.out.print("n的值：");
		int n = stdIn.nextInt();
		int t = 1, ji = 1;

		while(t <= n){
			ji *= t;
			t ++;
		}System.out.println("1到" + n + "的积是：" + ji);
	}
}

